{
  "apps": [
    {
      "name": "click-it-server",
      "script": "bun",
      "args": "run start",
      "env": {
        "PORT": 8300,
        "NODE_ENV": "production"
      },
      "watch": false,
      "max_memory_restart": "1G",
      "autorestart": true,
      "restart_delay": 1000,
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "error_file": "logs/error.log",
      "out_file": "logs/output.log",
      "merge_logs": true,
      "kill_timeout": 5000,
      "no_daemon": false
    }
  ]
}